<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"

    >
<!--    ohos:orientation="vertical"-->
     <StackLayout
        ohos:height="match_parent"
        ohos:width="match_parent"

        >


        <ListContainer
            ohos:id="$+id:ToDoThingListContainer"
            ohos:height="match_content"
            ohos:width="match_parent"

            />

        <Button
            ohos:id="$+id:MainAddTodoThingButton"
            ohos:height="60vp"
            ohos:width="60vp"
            ohos:text_size="40vp"
            ohos:top_margin="540vp"
            ohos:layout_alignment="horizontal_center"
            ohos:background_element="$media:addWithOutBackG"
            />
    </StackLayout>


</DirectionalLayout>