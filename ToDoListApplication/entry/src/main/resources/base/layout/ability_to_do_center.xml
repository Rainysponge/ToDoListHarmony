<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <Text
        ohos:id="$+id:UserCenterUserName"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="40fp"
        ohos:text=""
        ohos:layout_alignment="horizontal_center"
        ohos:text_color="#ffffff"
        />



    <Button
        ohos:id="$+id:UserCenterMyGameLog"
        ohos:height="50vp"
        ohos:width="319vp"
        ohos:text="我的游戏记录"
        ohos:text_size="24fp"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="60vp"
        ohos:background_element="$graphic:capsule_button_element"
        />

    <Button
        ohos:id="$+id:UserCenterChangePassWord"
        ohos:height="50vp"
        ohos:width="319vp"
        ohos:text="修改密码"
        ohos:text_size="24fp"
        ohos:top_margin="20vp"
        ohos:layout_alignment="horizontal_center"
        ohos:background_element="$graphic:capsule_button_element"
        />

    <Button
        ohos:id="$+id:UserCenterLogOut"
        ohos:height="50vp"
        ohos:width="319vp"
        ohos:layout_alignment="horizontal_center"
        ohos:background_element="$graphic:capsule_button_element_quit"
        ohos:text="退出"
        ohos:text_size="24fp"
        ohos:top_margin="20vp"

        />



</DirectionalLayout>