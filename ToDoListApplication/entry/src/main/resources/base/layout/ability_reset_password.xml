<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$media:backG6"
    ohos:orientation="vertical">

    <Text
        ohos:height="match_content"
        ohos:width="200vp"
        ohos:text_size="35fp"
        ohos:text="重置密码"
        ohos:italic="true"
        ohos:text_color="#A6FFFFFF"
        ohos:text_alignment="center"
        ohos:layout_alignment="horizontal_center"
        ohos:top_margin="70vp"
        ohos:text_font="HwChinese-medium"
        />
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="10fp"
        ohos:text="下次注意哦~"
        ohos:text_color="#FFFFFE"
        ohos:layout_alignment="right"
        ohos:right_margin="20vp"
        ohos:text_font="HwChinese-medium"
        />


    <StackLayout
        ohos:top_margin="20vp"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:layout_alignment="center">
        <TextField
            ohos:id="$+id:ResetPasswordOriginTextField"
            ohos:height="50vp"
            ohos:width="319vp"
            ohos:hint="请输入原先密码"
            ohos:text_size="17fp"
            ohos:text_color="#FFFFFF"
            ohos:hint_color="#FFFFDF"
            ohos:text_alignment="center"
            ohos:layout_alignment="horizontal_center"
            ohos:background_element="$graphic:register_textfield"
            ohos:text_input_type="pattern_password"
            />
        <Text
            ohos:visibility="hide"
            ohos:id="$+id:ResetPasswordOriginError"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:top_padding="8vp"
            ohos:bottom_padding="8vp"
            ohos:right_padding="10vp"
            ohos:right_margin="20vp"
            ohos:text="X"
            ohos:text_size="18fp"
            ohos:text_color="red"
            ohos:layout_alignment="right"/>
    </StackLayout>



    <StackLayout
        ohos:top_margin="20vp"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:layout_alignment="center">
        <TextField
            ohos:id="$+id:ResetPasswordNewTextField"
            ohos:height="50vp"
            ohos:width="319vp"
            ohos:hint="请输入新密码"
            ohos:text_size="17fp"
            ohos:text_color="#FFFFFF"
            ohos:hint_color="#FFFFDF"
            ohos:text_alignment="center"
            ohos:layout_alignment="horizontal_center"
            ohos:background_element="$graphic:register_textfield"
            ohos:text_input_type="pattern_password"
            />
        <Text
            ohos:visibility="hide"
            ohos:id="$+id:ResetPasswordNewError"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:top_padding="8vp"
            ohos:bottom_padding="8vp"
            ohos:right_padding="10vp"
            ohos:right_margin="20vp"
            ohos:text="X"
            ohos:text_size="18fp"
            ohos:text_color="red"
            ohos:layout_alignment="right"/>
    </StackLayout>



    <StackLayout
        ohos:top_margin="20vp"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:layout_alignment="center">
        <TextField
            ohos:id="$+id:ResetPasswordNewAgainTextField"
            ohos:height="50vp"
            ohos:width="319vp"
            ohos:hint="请再次输入新密码"
            ohos:text_size="17fp"
            ohos:text_color="#FFFFFF"
            ohos:hint_color="#FFFFDF"
            ohos:text_alignment="center"
            ohos:layout_alignment="horizontal_center"
            ohos:background_element="$graphic:register_textfield"
            ohos:text_input_type="pattern_password"
            />
        <Text
            ohos:visibility="hide"
            ohos:id="$+id:ResetPasswordNewAgainError"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:top_padding="8vp"
            ohos:bottom_padding="8vp"
            ohos:right_padding="10vp"
            ohos:right_margin="20vp"
            ohos:text="X"
            ohos:text_size="18fp"
            ohos:text_color="red"
            ohos:layout_alignment="right"/>
    </StackLayout>





    <Button
        ohos:id="$+id:ResetSubmitButton"
        ohos:height="50vp"
        ohos:width="319vp"
        ohos:text_size="24fp"
        ohos:text="提交信息"
        ohos:text_color="#FEFEFE"
        ohos:text_alignment="center"
        ohos:background_element="$graphic:capsule_button_element_fill"
        ohos:top_margin="100vp"
        ohos:layout_alignment="horizontal_center"

        />

    <Button
        ohos:id="$+id:ResetQuitButton"
        ohos:height="50vp"
        ohos:width="319vp"
        ohos:text_size="24fp"
        ohos:text="退出"
        ohos:text_color="#FEFEFE"
        ohos:text_alignment="center"
        ohos:background_element="$graphic:capsule_button_element_quit"
        ohos:top_margin="20vp"
        ohos:layout_alignment="horizontal_center"

        />

</DirectionalLayout>