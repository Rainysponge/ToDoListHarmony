<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">


    <TableLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:row_count="2"
        ohos:column_count="2"
        ohos:padding="20vp"
        ohos:orientation="horizontal"
        >
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="170vp"
            >
            <StackLayout
                ohos:height="140vp"
                ohos:width="140vp"
                ohos:margin="5vp"
                >


                <Image
                    ohos:height="match_parent"
                    ohos:width="match_parent"
                    ohos:image_src="$media:Clock"
                    ohos:scale_mode="stretch"
                    />

                <Button
                    ohos:id="$+id:ClockGameButton"
                    ohos:height="match_parent"
                    ohos:width="match_parent"/>
            </StackLayout>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_alignment="center"
                ohos:layout_alignment="horizontal_center"
                ohos:text="生死时速"
                ohos:text_size="25fp"
                ohos:margin="10vp"

                />


        </DirectionalLayout>


        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="170vp">

            <StackLayout
                ohos:height="140vp"
                ohos:width="140vp"
                ohos:margin="5vp"
                >


                <Image
                    ohos:height="match_parent"
                    ohos:width="match_parent"
                    ohos:image_src="$media:game2"
                    ohos:scale_mode="stretch"
                    />
                <Button
                    ohos:id="$+id:GuessGameButton"
                    ohos:height="match_parent"
                    ohos:width="match_parent"/>


            </StackLayout>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_alignment="center"
                ohos:layout_alignment="horizontal_center"
                ohos:text="猜大小"
                ohos:text_size="25fp"
                ohos:margin="10vp"

                />


        </DirectionalLayout>


        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_alignment="center"

            ohos:text="更多"
            ohos:text_size="25fp"
            ohos:margin="10vp"
            ohos:background_element="#ffffff"
            />



    </TableLayout>

</DirectionalLayout>