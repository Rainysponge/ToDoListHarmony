<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">


    <TableLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:row_count="2"
        ohos:column_count="2"
        ohos:padding="25vp"
        ohos:orientation="horizontal"
        >

        <StackLayout
            ohos:height="140vp"
            ohos:width="140vp"
            ohos:margin="5vp"
            >
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text_alignment="center"

                    ohos:text_size="25fp"
                    ohos:margin="10vp"
                    ohos:background_element="#ffffff"
                    />

            <Image
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:image_src="$media:addWithOutBackG"
                ohos:scale_mode="stretch"
                />


        </StackLayout>



        <StackLayout
            ohos:height="140vp"
            ohos:width="140vp"
            ohos:margin="5vp"
            >
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_alignment="center"

                ohos:text_size="25fp"
                ohos:margin="10vp"
                ohos:background_element="#ffffff"
                />

            <Image
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:image_src="$media:addWithOutBackG"
                ohos:scale_mode="stretch"
                />


        </StackLayout>
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_alignment="center"

            ohos:text="更多"
            ohos:text_size="25fp"
            ohos:margin="10vp"
            ohos:background_element="#ffffff"
            />



    </TableLayout>

</DirectionalLayout>